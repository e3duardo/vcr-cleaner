{
  "name": "vcr-cleaner",
	"displayName": "vcr-cleaner",
	"description": "Clean VCR files for selected contexts",
	"version": "0.0.5",
	"author": {
		"name": "Eduardo Santos",
		"email": "e3duardo@gmail.com",
		"url": "https://eduardosantos.me"
	},
	"publisher": "e3duardo",
	"repository": "https://github.com/e3duardo/vcr-cleaner",
	"license": "MIT",
	"engines": {
		"vscode": "^1.57.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onCommand:vcr-cleaner.destroyVcr",
		"*"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"menus": {
            "editor/context": [
                {
                    "command": "vcr-cleaner.destroyVcr",
                    "group": "vcr-cleaner@1",
                    "when": "editorTextFocus && editorLangId == ruby && resourceFilename =~ /.*_spec\\.rb$/"
                },{
                    "command": "vcr-cleaner.destroyAllVcr",
                    "group": "vcr-cleaner@1",
                    "when": "editorTextFocus && editorLangId == ruby && resourceFilename =~ /.*_spec\\.rb$/"
                }
            ]
        },
		"commands": [
			{
				"command": "vcr-cleaner.destroyVcr",
				"title": "Destroy VCR"
			},
			{
				"command": "vcr-cleaner.destroyAllVcr",
				"title": "Destroy all VCRs"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "yarn run test-compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.57.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"ts-loader": "^9.2.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0"
	}
}
